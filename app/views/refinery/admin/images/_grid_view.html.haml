
#thumbs
  - @images.each_with_index do |image|
    = link_to '', image.url, 
      style: "background-image:url(#{image.thumbnail(geometry: '120x120#c').url})", 
      title: image.title,
      class: "no-tooltip",
      data: {title: truncate(image.title, length: 23, omission: '&hellip;').html_safe}




