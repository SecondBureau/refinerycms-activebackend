- if object.errors.any?
  .alert.alert-error
  
    %button.close{type: "button", "data-dismiss" => "alert"}
      %i.icon-remove
  
    .h4= t('.problems_in_following_fields')
    
    %br
    
    %ul.separate-sections
      - unless defined?(include_object_name) && include_object_name
        - object.errors.each do |key, value|
          %li
            %i.icon-play
            = value
      - else
        - object.errors.full_messages.each do |value|
          %li
            %i.icon-play
            = value
