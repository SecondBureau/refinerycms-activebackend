

.col-md-4.col-md-offset-4
  .padded
    .login.box{style: "margin-top: 80px;"}
      .box-header
        %span.title= t('hello_please_sign_in', scope: 'refinery.sessions.new')
      
      .box-content.padded
      
        = render '/refinery/message' 
      
        = form_for resource, as: resource_name, url: refinery.refinery_user_session_path, html: {class: "separate-sections"} do |f|
          
          .input-group.addon-left
            %span.input-group-addon{href: "#"}
              %i.icon-user
            = f.text_field :login, placeholder: t('username', scope: 'activerecord.attributes.refinery/user')
            
          .input-group.addon-left
            %span.input-group-addon{href: "#"}
              %i.icon-key
            = f.text_field :password, autocomplete: 'off', placeholder: t('password', scope: 'activerecord.attributes.refinery/user')
           
          .submit
            = button_tag type: 'submit', class: "btn btn-blue btn-block", relative: true  do
              = t('sign_in', scope: 'refinery.sessions.new')
              %i.icon-signin

        = link_to t('forgot_password', scope: 'refinery.sessions.new'), refinery.new_refinery_user_password_path, relative: true

