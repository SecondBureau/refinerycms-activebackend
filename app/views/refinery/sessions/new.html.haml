= content_for :header, t('hello_please_sign_in', scope: 'refinery.sessions.new')

= form_for resource, :as => resource_name, :url => refinery.refinery_user_session_path do |f|
  
  .field.session_username.clearfix
    = f.label :login
    = f.text_field :login, :class => 'larger widest' 
  
  .field.session_password.clearfix
    = f.label :password
    = f.password_field :password, :autocomplete => 'off', :class => 'larger widest'
  
  .clearfix
  
    - if devise_mapping.rememberable?
      .field.remember_me
        = f.check_box :remember_me
        = f.label :remember_me
  
    .field.forgot_password
      = link_to t('forgot_password', scope: 'refinery.sessions.new'), refinery.new_refinery_user_password_path
 
  = render '/refinery/admin/form_actions', :f => f, :submit_button_text => t('refinery.sessions.new.sign_in'), :hide_cancel => true 
